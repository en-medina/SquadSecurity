<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:columnCount="4"
        >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/blank_profile_photo"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_columnSpan="1"

            android:layout_rowWeight="1"
            android:layout_gravity="left"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnWeight="3"
            android:layout_columnSpan="3"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            >
            <TextView
                android:id="@+id/profileFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/profileType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/profileUbication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cedula"
            android:textSize="15sp"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:layout_gravity="fill"
            />
        <TextView
            android:id="@+id/profileIdCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:layout_column="1"
            android:layout_row="1"

            android:layout_rowSpan="2"
            android:layout_columnSpan="1"
            android:layout_gravity="fill_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edad"
            android:textSize="15sp"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:layout_gravity="fill"
            />
        <TextView
            android:id="@+id/profileAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:layout_column="1"
            android:layout_row="2"

            android:layout_rowSpan="2"
            android:layout_columnSpan="1"
            android:layout_gravity="fill_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TelefÃ³no"
            android:textSize="15sp"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:layout_gravity="fill"
            />
        <TextView
            android:id="@+id/profileTelephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:layout_column="1"
            android:layout_row="3"

            android:layout_rowSpan="2"
            android:layout_columnSpan="1"
            android:layout_gravity="fill_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Celular"
            android:textSize="15sp"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:layout_gravity="fill"
            />
        <TextView
            android:id="@+id/profileCelullar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:layout_column="1"
            android:layout_row="4"

            android:layout_rowSpan="2"
            android:layout_columnSpan="1"
            android:layout_gravity="fill_horizontal"
            />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Editar Informacion"
            android:gravity="fill"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:textAlignment="center"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Notificar a administrador"
            android:gravity="fill"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:textAlignment="center"
            />
    </GridLayout>
</ScrollView>


